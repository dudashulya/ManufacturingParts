<Page x:Class="ManufacturingParts.Pages.MasterPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManufacturingParts.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MasterPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="300">
            
            <Button x:Name="MaterialBtn" Content="Материалы и комплектующие"></Button>
            <Button x:Name="FailuresBtn" Content="Сбои оборудования"></Button>
            <Button x:Name="ControlBtn" Content="Контроль качества"></Button>
        </StackPanel>
    </Grid>
</Page>

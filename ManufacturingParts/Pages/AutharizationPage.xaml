<Page x:Class="ManufacturingParts.Pages.AutharizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ManufacturingParts.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AutharizationPage">

    <Grid Background="#FFF3CC8D">
        <StackPanel Width="300" VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Логин:" Margin="0,0,0,5"/>
            <TextBox x:Name="txtLogin" Margin="0,0,0,10"/>
            <TextBlock Text="Пароль:" Margin="0,0,0,5"/>
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10"/>
            <CheckBox x:Name="chkRememberMe" Content="Запомнить меня" Margin="0,0,0,10"/>
            <Button x:Name="btnLogin" Content="Войти" Width="100" HorizontalAlignment="Center" Click="btnLogin_Click"/>
        </StackPanel>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0, 0, 0, 100" >
            <Button x:Name="btnReg" Content="Регистрация" Width="100" HorizontalAlignment="Center" Click="btnReg_Click"></Button>
        </StackPanel>
    </Grid>
</Page>
